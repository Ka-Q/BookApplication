        app:layout_constraintBottom_toBottomOf="@+id/tvGenreItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGenreItemName" />
</androidx.constraintlayout.widget.ConstraintLayout>